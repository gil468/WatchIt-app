<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:padding="30dp"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="WatchIt!"
        android:textAlignment="center"
        android:textColor="#FFFF7B00"
        android:textSize="40sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_pic_placeholder"/>

    <TextView
        android:id="@+id/UserNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="user name"
        android:textSize="20sp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/MyReviewsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userprofilebutton"
        android:text="My Reviews"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/EditMyProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userprofilebutton"
        android:text="Edit My Profile"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/FollowingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userprofilebutton"
        android:text="Following"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/userprofilebutton"
        android:text="Logout"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        />

</LinearLayout>